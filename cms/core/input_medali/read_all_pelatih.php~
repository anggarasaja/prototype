<?php

include '../../config/application.php';

if(isset($_POST['id_propinsi']) or isset($_POST['id_cabor'])) {
	if($_POST['id_propinsi']==0 && $_POST['id_cabor']==0) {
		$result = $MEDALI->readAllMedali();
		//echo "1";
	} elseif($_POST['id_propinsi']!=0 && $_POST['id_cabor']==0) {
		$result = $MEDALI->readAllMedali_prop($_POST['id_propinsi']);	
		//echo "2";
	} elseif($_POST['id_propinsi']==0 && $_POST['id_cabor']!=0) {
		$result = $MEDALI->readAllMedali_cabor($_POST['id_cabor']);	
		//echo "3";
	} else {
		$result = $MEDALI->readAllMedali_caborProp($_POST['id_propinsi'],$_POST['id_cabor']);
		//echo $_POST['id_propinsi']." ".$_POST['id_cabor'];
	}
	

//echo $result.length();

while($array = $result->fetch_assoc())
  {
		$rows[] = [$array['id_medali'],$array["emas"],$array["perak"],$array["perunggu"],$array["cabor"],$array["propinsi"],$array["cabor"],$array["tahun"],$array["id_kejuaraan"]];
  }
  echo json_encode($rows);
  } else {
  echo "data tidak dikirim";
  }
  